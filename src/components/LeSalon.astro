<script>
import Swiper from 'swiper';
import { Navigation, Pagination, Autoplay } from 'swiper/modules';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';


document.addEventListener( 'DOMContentLoaded', function() {
    const swiper = new Swiper('.swiper', {
        modules: [Navigation, Pagination, Autoplay],
        loop: true,               // true = slides loop infinitely
        autoplay: {               // optional auto-slide
          delay: 2000,            // 3 seconds per slide
          disableOnInteraction: false,
        },
        speed: 500,               // slide transition speed in ms
        slidesPerView: 1,         // how many slides visible at once
        spaceBetween: 10,         // spacing between slides in px
        centeredSlides: false,    // center the active slide
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
      });
});
</script>

