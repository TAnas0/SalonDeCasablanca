---
import { Image } from 'astro:assets';
import logoImg from '../assets/logos/logo-black.svg';

const navItems = [
  { label: 'Accueil', href: '/' },
  { label: 'Le Salon', href: '/lesalon' },
  {
    label: 'Activités',
    children: [
      { label: 'Ateliers', href: '/activites/ateliers' },
      { label: 'Conférences', href: '/activites/conferences' },
      { label: 'Masterclasses', href: '/activites/masterclasses' },
    ],
  },
  { label: 'Le Prix', href: '/#rejoignez-nous' },
  { label: '1-54', href: '/#rejoignez-nous' },
  { label: 'Rejoignez-nous', href: '/#rejoignez-nous' },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-bold items-center">
      <Image 
        src={logoImg} 
        alt="Emergence-Salon-de-Casablanca" 
        class="rounded-xs"
        width={150}
        height={56}
      />
    </a>

    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        item.children ? (
          <div class="relative group">
            <button class="flex items-center space-x-1 text-gray-900 hover:text-primary-500 transition duration-150 ease-in-out">
              <span>{item.label}</span>
              <svg class="w-4 h-4 mt-[2px]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-40 z-30 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              {item.children.map(child => (
                <a
                  href={child.href}
                  class="block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-primary-500 transition"
                >
                  {child.label}
                </a>
              ))}
            </div>
          </div>
        ) : (
          <a href={item.href} class="text-gray-900 hover:text-primary-500 transition duration-150 ease-in-out">
            {item.label}
          </a>
        )
      ))}
    </nav>

    <a href="/contact-us" class="bg-red-200 text-gray-900 px-4 py-2 rounded hover:bg-red-400/90 transition duration-150 ease-in-out">
      Nous contacter
    </a>
  </div>
</header>
